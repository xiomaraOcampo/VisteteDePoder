<!DOCTYPE html>
<html lang="en">
    <%-include("../partials/head")%>
<body>
    <div class="container-fluid">
        <!--HEADER-->
        
            <%-include("../partials/header")%>
          <!-- fin del HEADER-->  

          <!--MAIN-->   
       <main class="mainProducto">        
       
       <section class="Nombre-Producto">
        Lista de Productos
</section>
<ul>

  <% productsFile.forEach(function(product){ %>
  <li>
    Id: <%= product.id %>
   <div class="fondo"><a class="sinSubrayado" href="/products/detailProductUs/<%= product.id %>">
    <div class="producto-y-descripcion">
                          
      <section class="fotoProducto">
          <article> <img src="/images/imagesProducts/<%= product.avatar %> " alt=" <%= product.avatar %> ">
              <!--no lo muestra-->
          </article>
      </section>

      <section class="descripcion">
        <div class="remera1"> Nombre: <%= product.nombre %></div> 
        <div class="remera1"> Categoría: <%= product.categoria %></div> 
        <div class="remera1"> Descripción: <%= product.descripcion %></div> 
        <div class="remera1"> Talle: <%= product.talle %> </div> 
        <div class="remera1"> Cantidad:  <%= product.cantidad %></div>
        <div class="remera1"> Diseño: <%= product.disenio %></div> 
        <div class="remera1"> Precio: $ <%= toThousand(product.precio) %></div>

       
         
       <button class="aCarrito"type="button">Añadir a carrito</button>

       

       <!--<a class="remera1" href="/products/destroy/<%= product.id %>"><button type="button" >Borrar</button></a>-->

        </section>

    </div>
  </a>
  </div>

  </li>
  <% }); %>

</ul>

            </main>

    <%-include("../partials/footer")%>
</body>
</html>