<form  action="/products/edit/<%=productFound.id%>" method="POST" enctype="multipart/form-data">
    <div class="registro1">
        <label for="nombreProducto"><i class="fas fa-tshirt"></i></i></label>
        <label for="descripcion"><i class="fas fa-edit"></i></i></label>
