<!DOCTYPE html>
<html lang="en">

<%-include("../partials/head")%>
<body>
    <div class="container-fluid">
            <!--HEADER-->
            <header>
                <%-include("../partials/header")%>
                
            </header>
            <!--FIN HEADER-->
            <main>

                <!--MAIN-->  
<div class="vistaAdm">   
               
<form class="tajetaAdm" action="/users/edit/<%= usuarioAIngresar.id %>" method=GET>
    
    <% if (typeof errors!='undefined'){ %>
        <p style='color:red'>ERROR</p>
        <ul>
            <% for(i=0; i < errors.length; i++){ %>
            <li>
                <%=errors[i].msg %>
            </li>
            <% } %>
        </ul>

        <% } %>
    <div class="registro2">
        <h4>Mi cuenta</h4>
        <div class="infoAdm">
        <section class="fotoAdm">
        <img src="/images/usersImages/<%= usuarioAIngresar.image %> " alt=" <%= usuarioAIngresar.image %> ">
        </section>
        <article class= "datosAdm">
        <div class="nombreAdm" type="text" placeholder="Tu nombre" id="nombre" name="nombre" value="<%= usuarioAIngresar.name %>"> <%= usuarioAIngresar.name %></div> 
                 
        <div class="emailAdm" type="email" placeholder="Correo electrónico"id="email" name="email" value="<%= usuarioAIngresar.email %>"><%= usuarioAIngresar.email %></div>
        </article>
    
        </div>         
        
                     <!--Envían al home-->
        <button class="enviarAdm" type="submit">Edita tu cuenta</button>
    
       
       
   </div>
   
</form>
<div class="botonesAdm">
<form action="/products/create">

<button class="enviar" type="submit">Crear Producto</button>

</form>

<form action="/products/listProductsAdm">

    <button class="enviar" type="submit">Ver Productos</button>
    
    </form>

    
<form action="/users/list">

    <button class="enviar" type="submit">Ver Usuarios</button>
    
    </form>
</div>
</div> 
            </main>

            <%-include("../partials/footer")%>

    </div>

</body>
</html>